<% hide_link ||= false %>

<div class="nested-fields">
  <%= field_set_tag (f.object.name || "Product Category") do %>
    <%= f.input :name %>
    <div>
      <%= f.simple_fields_for :products do |p|%>
        <%= render partial: "bigos_menu_box/admin/products/sub_form", locals: {f:p, hide_link: true} %>
      <% end %>
      <%= link_to_add_association 'Add new product', f, :products, :partial => "bigos_menu_box/admin/products/form", "data-association-insertion-method" => "after", :class => "small button" %>
    </div>
    <%= link_to_remove_association "remove category", f, :class => "alert small button" unless hide_link %>
  <% end %>
</div>